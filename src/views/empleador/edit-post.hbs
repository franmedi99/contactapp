<div class="col-md-4 mx-auto text-center mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Editar post</h3>
        </div>
        <div class="card-body">
            <form action="/company/post/{{post.id_post}}" method="POST">
              


                <div class="form-group">
                 <label for="fecha">Titulo</label>
                 <input type="text" name="trabajo" value="{{post.trabajo}}" class="form-control" placeholder="Titulo del trabajo">
                  </div>


                <div class="form-group">
                <label for="productos">Descripcion</label>
                <textarea name="descripcion" class="form-control" placeholder="Lista de Productos" rows="5">{{post.descripcion}}</textarea>
                </div>

              


                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Editar Post</button>
                </div>
            </form>
        </div>
    </div>
</div>