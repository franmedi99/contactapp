<style>
.my-pre{
    margin: 0;
    font-family: Roboto,-apple-system,BlinkMacSystemFont,"Segoe UI","Helvetica Neue",Arial,sans-serif;
    font-size: .8125rem;
    font-weight: 400;
    line-height: 1.5;
    color: #444;
    text-align: left;
        --font-family-sans-serif: Roboto,-apple-system,BlinkMacSystemFont,"Segoe UI","Helvetica Neue",Arial,sans-serif;
    --font-family-monospace: SFMono-Regular,Menlo,Monaco,Consolas,"Liberation Mono","Courier New",monospace;
}
</style> 
 
 
 
 <div class="mt-3 mb-3"   >
              <div class="row justify-content-center mx-auto col-md-10 align-items-center ">
                <div class="card border-primary col-md-12 mx-auto text-center offset-md-1">
                   <div class="card-header bg-muted border text-primary" ><h4>{{profile.nombre}}</h3></div>
                  <div class="card-body">
                            <div class="mx-auto text-center">
                          
                              
                                      <div class="form-row col-12 mx-auto">

                          
                    <h3 class="mx-auto">Empresa creada {{profile.fecha}}</h3>


        </div>

                               </div>

<hr>
                            <div class="mx-auto text-center">
                                <label>Informacion de contacto</label>
                              
                                      <div class="form-row col-8 mx-auto">
          <div class="col-6 mx-auto">
                        <div class="form-group">
                          <label>Email empresarial</label>
                    <h5>{{profile.email}}</h5>
            </div>

          </div>
          
          <div class="col-6 mx-auto">
                        <div class="form-group">
                          <label>Telefono</label>
              <h5>{{profile.telefono}}</h5>
            </div>
          </div>
        </div>

                               </div>



<hr>
                           
                              <div class="mx-auto"> <h3>Referencias</h3></div> 
                       <div class="text-left ml-5"> <pre class="my-pre">{{profile.descripcion}}</pre></div>



<hr>
<h4 class="mx-auto text-center">Ofertas Laborales de {{profile.nombre}}</h4>
<div class="card-group">

    
 {{#each oferta as |oferta|}}
 <div class="col-12 mb-3">
  <div class="card border-success">
<div class="card-header"><h5 class="card-title">{{oferta.trabajo}}</h5></div>
    <div class="card-body">
      
      <p class="card-text">{{oferta.descripcion}}</p>


           <form action="/company/new-notification/{{oferta.id_firma}}" method="post"
                                        onsubmit="return confirm('Desea Enviar una Solicitud?');">
                                        <input type="hidden" name="trabajo" value="{{oferta.trabajo}}">
                                        <button type="submit" class="btn btn-primary ">Enviar Solicitud</button>
                                    </form>
    </div>
  </div>



</div>
{{/each}}



</div>






                
                  </div>
                </div>
              </div>
            </div> 

