<link rel="stylesheet" href="/css/boton_de_archivo.css">

<div class="mt-3">

<div class="row justify-content-center mx-auto col-md-8 align-items-center ">
<div class="card border-primary col-md-12 mx-auto text-center offset-md-1">
  <div class="card-header bg-none"><h3>Creando tu Perfil de trabajador</h3></div>
  <div class="card-body">
    
    <form action="/employee/new" method="post" enctype="multipart/form-data">

<h3 class="text-center">Subir video de presentacion (Opcional)</h3>
<h6>El video consiste en presentarte en 10 segundos o menos. </h6>

          <div id="div_file" class="mx-auto">
            <h4 id="texto">Subir video <br><i class="fa fa-video-camera  fa-lg" aria-hidden="true"></i></h4>
              <input type="file" name="video"  id="btn_archivo">
            
          </div>

<hr>


        <div class="form-row col-12 mx-auto">
          <div class="col-6 mx-auto">
                        <div class="form-group">
                          <label>Nombre/s</label>
              <input type="type" name="nombre" placeholder="Nombre/s" class="form-control text-center" autocomplete="on" autofocus>
            </div>

          </div>
          
          <div class="col-6 mx-auto">
                        <div class="form-group">
                          <label>Apellido/s</label>
              <input type="text" name="apellido" placeholder="Apellido/s" class="form-control text-center"  autocomplete="on">
            </div>
          </div>
        </div>
            
    <div class="form-row">

    <div class="form-group col-md-8 mx-auto">
       <label>Sexo</label>
    <select name="sexo" class="form-control" id="sexo" >
    <option value="Hombre">Hombre</option>
    <option value="Mujer">Mujer</option>
    </select>
</div>

    <div class="form-group col-md-8 mx-auto">
       <label>Estado Civil</label>
    <select name="estado_civil" class="form-control">
    <option id="sol" value="Casado">Soltero/a</option>
    <option id="cas" value="Soltero">Casado/a</option>
    </select>
</div>

  </div>
 





  <div class="form-row">
    <div class="form-group col-md-8 mx-auto">
      <label>Fecha de Nacimiento</label>
      <input type="date" name="fecha" class="form-control text-center" placeholder="Fecha" autocomplete="on">
      </div>
   
  </div>

    <div class="form-row">
    <div class="form-group col-md-8 mx-auto">
      <label>Telefono</label>
      <input type="tel" name="telefono" class="form-control text-center" placeholder="Telefono..." autocomplete="on">
      </div>
   
  </div>



   <div class="form-row ">
       <div class="form-group col-md-12 mx-auto">
          <label>Datos Laborales</label>
<textarea id="infoartist"  ng-show="dForm"  name="descripcion" rows="5" class="form-control text-left" placeholder="Datos Laborales" Creando tu Perfil de trabajador></textarea>
</div>
</div>

<h3 class="text-center mt-3">Redes Sociales (Opcional)</h3>

                 <div class="form-row col-12 mx-auto  mb-5">
                    <div class="col-12 mx-auto">
     <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" ><i class="fa fa-facebook" aria-hidden="true"></i></i> &nbsp;URL De Facebook</span>
  </div>
  <input type="text" name="facebook" class="form-control" placeholder="URL de Perfil de Facebook(WEB)">
</div>

          </div>
                  
        </div>
                <div class="form-row col-12 mx-auto  mb-5">
                    <div class="col-12 mx-auto">
     <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon3"><i class="fa fa-instagram" aria-hidden="true"></i> &nbsp; instagram.com/</span>
  </div>
  <input type="text" name="instagram" class="form-control" placeholder="Usuario de Instagram">
</div>

          </div>
                  
        </div>
                <div class="form-row col-12 mx-auto  mb-5">
                    <div class="col-12 mx-auto">
     <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text"><i class="fa fa-twitter" aria-hidden="true"></i> &nbsp; https://twitter.com/</span>
  </div>
  <input type="text" name="twitter" class="form-control" placeholder="usuario de Twitter">
</div>

          </div>
                  
        </div>


    <button type="submit"  class="btn btn-lg btn-outline-primary">Confirmar perfil <i class="fa fa-check" aria-hidden="true"></i></button>
    </form>
  </div>
</div>

</div>





  </div>
       
       
     </div><br>



<script>


document.getElementById("sexo").onchange = function() {cambiaValores()};

function cambiaValores() {
    var input = document.getElementById("sexo");
    var sol= document.getElementById("sol")
    var cas = document.getElementById("cas")
   if(input.value == "Hombre"){
    sol.value= "Soltero"
    cas.value="Casado"
   }else{
     sol.value="Soltera"
     cas.value="Casada"
   }
}



var text = document.getElementById("infoartist").value;
text = text.replace(/\r?\n/g, '<br />');

</script>

