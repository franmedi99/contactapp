<script>


document.getElementById("sexo").onchange = function() {cambiaValores()};


function cambiaValores() {

    var input = document.getElementById("sexo");
    var sol= document.getElementById("sol")
    var cas = document.getElementById("cas")
    var tipo1 = document.getElementById("att1")
    var tipo2 = document.getElementById("att2")
    var hijos = document.getElementById("hijos");
   if(input.value==="Hombre"){
    tipo1.removeAttribute('disabled')
    tipo1.style.display = "block";
    tipo2.style.display = "none";
    tipo2.setAttribute('disabled', "true");
    tipo2.removeAttribute('required');
    sol.value= "Soltero"
    cas.value="Casado"
   }else if(input.value==="Mujer"){
    tipo1.removeAttribute('disabled')
    tipo1.style.display = "block";
    tipo2.style.display = "none";
    tipo2.setAttribute('disabled', "true");
    tipo2.removeAttribute('required');
     sol.value="Soltera"
     cas.value="Casada"
   }else{
     tipo1.style.display = "none";
      tipo1.setAttribute('disabled', "true");
      tipo2.removeAttribute('disabled');
      tipo2.style.display = "block";
      tipo2.setAttribute('required', "true");
   }
}

function Hijos(){
          var check1 = document.getElementById("customRadio1");
          var check2 = document.getElementById("customRadio2");
          var hijos = document.getElementById("hijos")
        if (check1.checked) {
           hijos.value = 0
          hijos.style.display="none";
          
        }
        if(check2.checked) {
        hijos.value="";
        
        hijos.style.display = "block";
        hijos.setAttribute('required', "true");
        }
   
}

var text = document.getElementById("infoartist").value;
text = text.replace(/\r?\n/g, '<br />');

</script>

