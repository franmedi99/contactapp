


<div  style="  margin-top:1%;" >

<div class="row justify-content-center mx-auto col-md-8 align-items-center ">
<div class="card border-primary col-md-12 mx-auto text-center offset-md-1">
  <div class="card-header bg-none"><h3>Creando tu Perfil de trabajador</h3></div>
  <div class="card-body">
    
    <form action="/employee/new" method="post">
        <div class="form-row col-8 mx-auto">
          <div class="col-6 mx-auto">
                        <div class="form-group">
                          <label>Nombre/s</label>
              <input type="type" name="nombre" placeholder="Nombre/s" class="form-control text-center" autocomplete="on" autofocus>
            </div>

          </div>
          
          <div class="col-6 mx-auto">
                        <div class="form-group">
                          <label>Apellido/s</label>
              <input type="text" name="apellido" placeholder="Apellido/s" class="form-control text-center"  autocomplete="on">
            </div>
          </div>
        </div>
            
    <div class="form-row">

    <div class="form-group col-md-8 mx-auto">
       <label>Sexo</label>
    <select name="sexo" class="form-control" id="sexo" >
    <option value="Hombre">Hombre</option>
    <option value="Mujer">Mujer</option>
    </select>
</div>

    <div class="form-group col-md-8 mx-auto">
       <label>Estado Civil</label>
    <select name="estado_civil" class="form-control">
    <option id="sol" value="Casado">Soltero/a</option>
    <option id="cas" value="Soltero">Casado/a</option>
    </select>
</div>

  </div>
 





  <div class="form-row">
    <div class="form-group col-md-8 mx-auto">
      <label>Fecha de Nacimiento</label>
      <input type="date" name="fecha" class="form-control text-center" placeholder="Fecha" autocomplete="on">
      </div>
   
  </div>
   <div class="form-row">
       <div class="form-group col-md-12 mx-auto">
          <label>Datos Laborales</label>
<textarea id="infoartist"  ng-show="dForm"  name="descripcion" rows="5" class="form-control text-left" placeholder="Datos Laborales" Creando tu Perfil de trabajador></textarea>
</div>
</div>

    <input type="submit" class="btn btn-lg btn-outline-primary" value="Confirmar perfil">
    </form>
  </div>
</div>

</div>





  </div>
       
       
     </div><br>



<script>


document.getElementById("sexo").onchange = function() {cambiaValores()};

function cambiaValores() {
    var input = document.getElementById("sexo");
    var sol= document.getElementById("sol")
    var cas = document.getElementById("cas")
   if(input.value == "Hombre"){
    sol.value= "Soltero"
    cas.value="Casado"
   }else{
     sol.value="Soltera"
     cas.value="Casada"
   }
}



var text = document.getElementById("infoartist").value;
text = text.replace(/\r?\n/g, '<br />');

</script>

